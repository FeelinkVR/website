<!----------------- Header ----------------->
<div class="header flex items-center justify-between px-5 py-3 sticky top-0 bg-gray-900 z-40 ">
  <div class="flex items-center justify-between">
    <!-- Hamburger -->
    <button onclick="myFunction()"  class="visible sm:hidden" title="Open Menu" aria-label="Open Menu">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 text-white" fill="currentColor" viewBox="0 0 24 24"
        stroke-width="1.5" stroke="#ffffff" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
        <line x1="4" y1="6" x2="20" y2="6" />
        <line x1="4" y1="12" x2="20" y2="12" />
        <line x1="4" y1="18" x2="20" y2="18" />
      </svg> 
    </button>
    <!-- Logo -->
    <a href="/" class="mx-2 sm:w-40 w-24">
      <%= image_tag("logo.png", :alt => "logo-feelink") %>
    </a>
  </div>

  <!-- Avatar menu -->
  <img id="avatarButton" type="button" data-dropdown-toggle="userDropdown" data-dropdown-placement="bottom-start" class="w-10 h-10 sm:w-14 sm:h-14 rounded-full cursor-pointer p-1 ring-2 ring-gray-500 bg-white" src="/images/avatar.png" alt="User dropdown">
  <!-- Dropdown menu -->
  <div id="userDropdown" class="hidden z-10 w-44 bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700 dark:divide-gray-600">
      <div class="py-3 px-4 text-sm text-gray-900 dark:text-white">
        <div><%= "#{current_user.nombre} #{current_user.apellido}" %> </div>
        <div class="font-medium truncate"><%= current_user.email %></div>
      </div>
      <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="avatarButton">
        <li>
          <%= link_to "Mi Perfil", user_path(id: current_user.id), class:"block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"%>
        </li>
      </ul>
      <div class="py-1">
          <%= link_to 'Cerrar SesiÃ³n', destroy_user_session_path, class:"block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white" %>
      </div>
  </div>
</div>

<script>
  function myFunction() {
      document.getElementById("sidenav-open").classList.toggle("show-sidebar");
  }
</script>