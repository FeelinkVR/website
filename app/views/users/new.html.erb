<div class ="container">
  <h2 class="text-2xl font-extrabold dark:text-white my-4">Datos</h2>

  <%= form_for :user,  url: users_path(empresa_id: @empresa.id), method: :post do |f| %>
    
    <div class="field mb-4">
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Nombre</label>
      <%= f.text_field :nombre, autofocus: true, autocomplete: "name", class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
    </div>

    <div class="field mb-4">
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Apellido</label>
      <%= f.text_field :apellido, autofocus: true, autocomplete: "name", class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
    </div>

    <div class="field mb-4">
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Email</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
    </div>

    <div class="field mb-4">
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Telefono</label>
      <%= f.text_field :telefono, autofocus: true, autocomplete: "phone", class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
    </div>

    <div class="field mb-4">
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Contraseña</label>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
    </div>

    <div class="field mb-4">
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Confirmar contraseña</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
    </div>
    <br/>

    <% if current_user.admin %>
      <div class="field mb-4">
        <%= f.label :encargado, "Encargado: " %>
        <%= f.check_box :encargado, {:class => "form-check-input"}, 'true', 'false' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Añadir", class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
      <%= link_to "Volver", :back, class: "text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-600 dark:focus:ring-blue-800 float-right" %>
    </div>
    <br/>
  <% end %>
</div>

